<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contactos</h1>
      <p class="text-center lead">Criar ou editar contactos.</p>

      <%- include('includes/messages') %>

      <% if(contacts._id) { %>
      <form action="/contacts/edit/<%= contacts._id %>" method="POST">
      <% } else { %>
      <form action="/contacts/register" method="POST">
      <% } %>
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Nome</label>
            <input value="<%= contacts.nome %>" type="text" class="form-control" name="nome">
          </div>
          <div class="form-group">
            <label>Sobrenome</label>
            <input value="<%= contacts.sobrenome %>" type="text" class="form-control" name="sobrenome">
          </div>
          <div class="form-group">
            <label>Email</label>
            <input value="<%= contacts.email %>" type="email" class="form-control" name="email">
          </div>
          <div class="form-group">
            <label>Telem√≥vel</label>
            <input value="<%= contacts.telemovel %>" type="tel" class="form-control" name="telemovel">
          </div>
          <button type="submit" class="btn btn-primary">Guardar</button>
        </form>

      <div class="responsive-table">
        
      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>