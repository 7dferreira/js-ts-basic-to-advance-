<%- include('includes/head') %>
<%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-12 my-3">
      <div class="border rounded px-4 py-2 shadow p-3 mb-5 bg-white">
        <h2>
          <%= user.email %>
        </h2>
        <h5 class="mt-4 text-info">
          <%= contacts.length %> Contactos
        </h5>
      </div>

      <%- include('includes/messages') %>
        <% if (contacts.length> 0) { %>

          <div class="responsive-table">
            <table class="table table-borderless my-2 text-left">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Telefone</th>
                  <th>E-mail</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tr>
                <td></td>
              </tr>
              <tbody class="list-tab p-3">
                <% contacts.forEach(contact=> { %>
                  <tr>
                    <td>
                      <%= contact.nome + " " +contact.sobrenome %>
                    </td>
                    <td>
                      <%= contact.telemovel %>
                    </td>
                    <td>
                      <%= contact.email %>
                    </td>
                    <td>
                      <a class="text-secondary" href="/contacts/index/<%= contact._id %>">
                        <span class="material-icons"> mode_edit </span>
                      </a>
                    </td>
                    <td>
                      <a class="text-secondary" href="/contacts/delete/<%= contact._id %>">
                        <span class="material-icons"> delete </span>
                      </a>
                    </td>
                  </tr>
                  <% }); %>
              </tbody>
            </table>
          </div>

          <% } else {%>

            <p class="text-center lead">NÃ£o existem contactos na sua agenda.</p>

          <% } %>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>